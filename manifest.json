{
  "manifest_version": 2,
  "name": "Art Gallery New Tab",
  "version": "1.0.0",
  "description": "Transform your new tab into a gallery of amazing artworks from Google Arts & Culture, Metropolitan Museum, and other world-class museums",
  "permissions": [
    "storage",
    "activeTab",
    "https://www.gstatic.com/*",
    "https://*.ggpht.com/*",
    "https://collectionapi.metmuseum.org/*",
    "https://images.metmuseum.org/*"
  ],
  "background": {
    "scripts": [
      "dist/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Art Gallery New Tab",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "newtab/newtab.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "web_accessible_resources": [
    "fonts/*"
  ]
}